<% if logged_in? %>
  <%= form_with model: [@blog, Comment.new], local: true, class: "mt-6" do |form| %>
    <div class="bg-gray-100 p-4 rounded-lg">
      <%= form.text_area :content, placeholder: "Add comment...", rows: 3, class: "w-full rounded-lg p-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-400", required: true %>
      <div class="flex justify-end mt-2">
        <%= form.submit "Submit", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded-full" %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-sm text-gray-600 italic mt-6">You must be <a href="<%= login_path %>" class="text-blue-500 underline">logged in</a> to comment.</p>
<% end %>
