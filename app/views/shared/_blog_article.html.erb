<%= link_to blog_path(blog), class: "block hover:shadow-md transition" do %>
  <article class="w-full h-full flex max-w-xl flex-col items-start justify-between bg-gray-50 shadow-sm p-8 rounded-lg">
    <div class="flex items-center gap-x-4 text-xs">
      <time datetime="<%= blog.created_at.iso8601 %>" class="text-gray-500"><%= blog.created_at.strftime('%B %d, %Y') %></time>
      <span class="rounded-full bg-gray-100 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-200"><%= category_name(blog.category_id) %></span>
    </div>

    <div class="group relative">
      <h3 class="text-lg font-semibold leading-6 text-gray-900">
        <%= blog.title %>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= blog.content.truncate(100) %></p>
    </div>

    <div class="relative mt-8 flex items-center gap-x-4">
      <img src="<%= blog.user&.img_url || "https://img.freepik.com/free-vector/blue-circle-with-white-user_78370-4707.jpg?t=st=1746497186~exp=1746500786~hmac=6a97e8e6a6563961084c0c1155dcb3733eaf92ab5a768b9c9dc6264a8dbc14fe&w=1380" %>" alt="" class="size-10 rounded-full bg-gray-50">
      <div class="text-sm leading-6 py-4">
        <p class="font-semibold text-gray-900"><%= blog.user&.name || "Unknown Author" %></p>
      </div>
    </div>
  </article>
<% end %>
