<div class="flex min-h-full flex-col justify-center py-12 px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="mt-10 text-center text-2xl font-bold tracking-tight text-gray-900">Register a new account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <%= form_with url: signup_path, local: true, class: "space-y-6" do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-sm/6 font-medium text-gray-900" %><br>
      <%= f.text_field :name, class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 placeholder:text-gray-400 focus:ring-2 focus:ring-indigo-600 focus:outline-none sm:text-sm" %>

    </div>

    <div class="mb-4">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: "border p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: "border p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class: "border p-2 w-full" %>
    </div>

    <%= f.submit "Sign Up", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  <% end %>
  </div>
</div>