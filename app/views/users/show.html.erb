<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mt-10">
    <h1 class="text-2xl font-bold mb-4">User profile</h1>

    <div class="mb-4">
        <p class="text-gray-700"> <strong> Email:</strong> <%= @user.email_address %> </p>
    </div>

    <div class="mb-4">
        <%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>
            <div class="mb-4">
                <%= form.label :name, "Name", class: "block text-gray-700 font-bold mb-2" %>
                <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>

            <div class="mb-4">
                <%= form.label :img_url, "Profile Picture URL", class: "blovk text-gray-700 font-bold mb-2"%>
                <%= form.text_field :img_url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>

            <div>
                <%= button_tag(type: "submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") do %>
                    Update
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="mt-6">
        <%= button_to 'Logout', logout_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
</div>